@model List<UI_MVC.Models.ShippersViewModel>


@{
    ViewBag.Title = "Shippers List";
}

<h1 class="primary-text">Shippers List</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Company Name</th>
            <th scope="col">Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shippers in Model)
        {
            <tr>
                <th>@shippers.ShipperId</th>
                <td>@shippers.CompanyName</td>
                <td>@shippers.PhoneNumber</td>
                <td>
                    <a href=@Url.Action("Delete", new { idToDelete = shippers.ShipperId })>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href=@Url.Action("InsertUpdate", "Shippers")>
    <button type="button" class="btn btn-info">Insert/Update</button>
</a>